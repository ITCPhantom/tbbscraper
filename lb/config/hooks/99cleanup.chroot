#! /bin/sh

# Loosely based on /usr/share/doc/live-build/examples/hooks/minimal.chroot

# Unusually, we want to ignore exit status for all commands in this script.

UNWANTED_PACKAGES="apt-utils aptitude man-db manpages info wget"

apt-get remove --purge --yes $UNWANTED_PACKAGES
apt-get autoremove --purge --yes

find . -name '*~' -delete
rm -rf /var/cache/man/*
find /var/log -type f -execdir truncate -s 0 '{}' +

exit 0
